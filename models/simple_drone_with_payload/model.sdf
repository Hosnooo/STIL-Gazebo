<?xml version="1.0" ?>
<sdf version="1.7">
  <model name="simple_drone_with_pendulum">
    <!-- Drone Body -->
    <link name="drone">
      <pose>0 0 1 0 0 0</pose> <!-- Drone's position in the world -->
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.02</iyy>
          <izz>0.02</izz>
        </inertia>
      </inertial>
      <visual name="drone_visual">
        <geometry>
          <box>
            <size>0.5 0.5 0.2</size>
          </box>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Blue</name>
            <uri>file://media/materials/scripts/gazebo.material</uri>
          </script>
        </material>
      </visual>
    </link>

    <!-- Pendulum -->
    <link name="pendulum">
      <pose relative_to="drone">0 0 -0.5 0 0 0</pose> <!-- Pendulum relative to drone -->
      <inertial>
        <mass>0.01</mass>
        <inertia>
          <ixx>0.00005</ixx>
          <iyy>0.0008333</iyy>
          <izz>0.0008333</izz>
        </inertia>
      </inertial>
      <visual name="pendulum_visual">
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length>1.0</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <name>Gazebo/White</name>
            <uri>file://media/materials/scripts/gazebo.material</uri>
          </script>
        </material>
      </visual>
    </link>

    <!-- Payload -->
    <link name="payload">
      <pose relative_to="pendulum">0 0 -0.5 0 0 0</pose> <!-- Payload relative to pendulum -->
      <inertial>
        <mass>0.15</mass>
        <inertia>
          <ixx>0.004</ixx>
          <iyy>0.004</iyy>
          <izz>0.004</izz>
        </inertia>
      </inertial>
      <visual name="payload_visual">
        <geometry>
          <sphere>
            <radius>0.1</radius>
          </sphere>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Red</name>
            <uri>file://media/materials/scripts/gazebo.material</uri>
          </script>
        </material>
      </visual>
    </link>

    <!-- Joint: Drone to Pendulum -->
    <joint name="pendulum_joint" type="revolute">
      <parent>drone</parent>
      <child>pendulum</child>
      <pose>0 0 -0.25 0 0 0</pose> <!-- Joint position relative to parent (drone) -->
      <axis>
        <xyz>1 1 1</xyz>
        <limit>
          <lower>-1.5708</lower>
          <upper>1.5708</upper>
        </limit>
      </axis>
    </joint>

    <!-- Joint: Pendulum to Payload -->
    <joint name="payload_joint" type="revolute">
      <parent>pendulum</parent>
      <child>payload</child>
      <pose>0 0 -0.5 0 0 0</pose> <!-- Joint position relative to parent (pendulum) -->
      <axis>
        <xyz>0 0 0</xyz>
        <limit>
          <lower>-1.5708</lower>
          <upper>1.5708</upper>
        </limit>
      </axis>
    </joint>

    <!-- Pendulum Plugin -->
    <plugin name="pendulum_plugin" filename="libpendulum_plugin.so" />
  </model>
</sdf>
